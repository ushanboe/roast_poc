{
  "version": 2,

  "buildCommand": "npm --prefix client install && npm --prefix client run build",
  "outputDirectory": "client/dist",

  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x"
    }
  },

  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
